<%- include ../partials/header.ejs %>
  <body>
    <div>
      <h1 class="center">All Customers Data</h1>
      <table class="table">
        <tr>
          <th>Id</th>
          <th>Parent Name</th>
          <th>Email</th>
          <th>Child Name</th>
          <th>Saldo</th>
          <th>Budget Limit</th>
          <th>Action</th>
        </tr>
        <% customersData.forEach(customers => { %>
          <tr>
            <td><%= customers.id %></td>
            <td><%= customers.parent_name %></td>
            <td><%= customers.email %></td>
            <td><%= customers.child_name %></td>
            <td><%= customers.saldo %></td>
            <td><%= customers.budget_limit %></td>
            <td>
            <a href="/customers/edit/<%= customers.id %>" class="btn btn-success">Edit</a>
            <a href="/customers/delete/<%= customers.id %>" class="btn btn-success" onclick="return confirm('Are you sure you want to delete this Teacher?')">Delete</a>
            </td>
          </tr>
        <% }) %>

      </table>
    </div>
    
  </div>
  </div>
  </body>
</html>