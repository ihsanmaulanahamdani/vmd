<%- include ../partials/_header.ejs %>
  <body>
    <div>
      <h1 class="center">Item Data</h1>

      <a href="/items/add" class="btn btn-success">Add Item</a>
<table class="table">
  <tr>
    <th>ID</th>
    <th>NAME</th>
    <th>STOCK</th>
    <th>PRICE</th>
    <th>ACTION</th>
  </tr>
  <% Items.forEach(function(item){%>
    <tr>
      <td><%= item.id%></td>
      <td><%= item.name%></td>
      <td><%= item.stock%></td>
      <td><%= item.price%></td>
    <td><a href="/items/edit/<%= item.id %>" class="btn btn-success">Edit</a></td>
    <td><a href="/items/delete/<%= item.id %>" class="btn btn-success" onclick="return confirm('Are you sure you want to delete this Item?')">Delete</a></td>
  </tr>
  <%})%>
</table>
</div>

</div>
</div>
</body>
</html>
